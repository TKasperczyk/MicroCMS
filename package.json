{
  "name": "microcms",
  "version": "0.0.1",
  "description": "Microserviced Company Management System",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint --ignore-path .gitignore . --fix",
    "build": "tsc && tsc-alias",
    "buildClean": "rm -rf ./dist/* && tsc && tsc-alias",
    "checkCircular": "madge --circular --extensions js ./dist",
    "prestart": "npm run build",
    "start": "node dist/master | pino-pretty -c -t",
    "reqLog": "cat logs/requests/current.json | jq -s 'sort_by(.time) | .[]' -c | pino-pretty -c -t 'SYS:standard'"
  },
  "author": "Tomasz Kasperczyk",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/dot-object": "^2.1.2",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@types/pino": "^7.0.5",
    "body-parser": "^1.20.0",
    "dot-object": "^2.1.4",
    "express": "^4.18.1",
    "mongodb": "^4.7.0",
    "mysql2": "^2.3.3",
    "pino": "^8.1.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "madge": "^5.0.1",
    "tsc-alias": "^1.6.11",
    "typescript": "^4.7.4"
  }
}

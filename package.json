{
  "name": "microcms",
  "version": "0.0.1",
  "description": "Microserviced Company Management System",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint --ignore-path .gitignore . --fix --cache --cache-file /tmp/eslintcache",
    "build": "tsc && tsc-alias",
    "buildQuick": "tsc && tsc-alias",
    "prestart": "npm run build",
    "start": "node dist/master --generic ${npm_config_generic} | pino-pretty -c -t",
    "prestartQuick": "npm run buildQuick",
    "startQuick": "node dist/master --generic ${npm_config_generic} | pino-pretty -c -t",
    "reqLog": "cat logs/requests/current.json | grep \"${npm_config_reqid}\" | jq -s 'sort_by(.time) | .[]' -c | pino-pretty -c -t 'SYS:standard'",
    "perfLog": "cat logs/performance/current.json | jq -s 'sort_by(.time) | .[]' -c | pino-pretty -c -t 'SYS:standard'",
    "checkCircular": "madge --circular --extensions js ./dist",
    "generateService": "tsc && node dist/tools/generators/service.js"
  },
  "author": "Tomasz Kasperczyk",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/dot-object": "^2.1.2",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.0.3",
    "@types/pino": "^7.0.5",
    "@types/redis": "^4.0.11",
    "@types/set-interval-async": "^1.0.0",
    "@types/underscore": "^1.11.4",
    "@types/yargs": "^17.0.10",
    "body-parser": "^1.20.0",
    "dot-object": "^2.1.4",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "mongodb": "^4.7.0",
    "mysql2": "^2.3.3",
    "nocache": "^3.0.4",
    "pino": "^8.1.0",
    "redis": "^4.2.0",
    "set-interval-async": "^2.0.3",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "underscore": "^1.13.4",
    "yargs": "^17.5.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@anatine/zod-openapi": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "madge": "^5.0.1",
    "tsc-alias": "^1.6.11",
    "typescript": "^4.7.4"
  }
}

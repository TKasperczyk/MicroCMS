{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [238]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "indent": [true, "spaces", 4],
        "whitespace": [true, "check-module", "check-branch"],
        "ordered-imports": [
            true,
            {
                "module-source-path": "full",
                "grouped-imports": true,
                "groups": [{
                    "name": "internal modules",
                    "match": "^@cms",
                    "order": 2
                }, {
                    "name": "relative dir",
                    "match": "^[.].*",
                    "order": 3
                }, {
                    "name": "node_modules",
                    "match": ".*",
                    "order": 1
                }]
            }
        ],

        "no-empty": false,
        "no-unused-expression": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [238]
        }
    }
}

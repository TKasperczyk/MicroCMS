{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "incremental": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types", "declarations.d.ts"],
        "baseUrl": "./",
        "paths": {
            "@framework/*": ["src/framework/*"],
        },
    }
}